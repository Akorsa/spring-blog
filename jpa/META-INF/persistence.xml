<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="persistenceUnit">
        <class>ru.akorsa.springdata.jpa.model.ContactEntity</class>
        <class>ru.akorsa.springdata.jpa.model.ContactTelDetailEntity</class>
        <class>ru.akorsa.springdata.jpa.model.HobbyEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/dev_hibernate"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username"/>
            <property name="hibernate.connection.password"/>
        </properties>
    </persistence-unit>
</persistence>
